<%- include('header') %>

<div class="page-hero">
    <div class="hero-content">
        <h1><i class="fas fa-users"></i> User Management</h1>
        <p>Manage Jenish Pardava's system users</p>
    </div>
    <div class="hero-actions">
        <a href="/add" class="btn-hero primary">
            <i class="fas fa-user-plus"></i>
            Add New User
        </a>
    </div>
</div>

<div class="filters-bar">
    <div class="search-box">
        <i class="fas fa-search"></i>
        <input type="text" placeholder="Search users..." id="searchInput">
    </div>
    <div class="filter-buttons">
        <button class="filter-btn active" data-filter="all">All Users</button>
        <button class="filter-btn" data-filter="male">Male</button>
        <button class="filter-btn" data-filter="female">Female</button>
        <button class="filter-btn" data-filter="active">Active</button>
    </div>
</div>

<div class="users-container">
    <% if (allAdmin && allAdmin.length > 0) { %>
        <div class="users-grid">
            <% allAdmin.forEach(user => { %>
                <div class="user-card" data-gender="<%= user.gender.toLowerCase() %>">
                    <div class="user-header">
                        <div class="user-avatar-container">
                            <img src="/uploads/<%= user.profile %>" alt="<%= user.fname %>" class="user-avatar"
                                 onerror="this.src='https://ui-avatars.com/api/?name=<%= user.fname %>+<%= user.lname %>&background=3b82f6&color=fff'">
                            <div class="status-indicator online"></div>
                        </div>
                        <div class="user-actions">
                            <button class="action-btn edit" onclick="window.location.href='/edit/<%= user._id %>'">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete" onclick="deleteUser('<%= user._id %>', '<%= user.fname %> <%= user.lname %>')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="user-info">
                        <h3 class="user-name"><%= user.fname %> <%= user.lname %></h3>
                        <p class="user-email"><i class="fas fa-envelope"></i> <%= user.email %></p>
                        <p class="user-phone"><i class="fas fa-phone"></i> <%= user.phone %></p>
                        <p class="user-location"><i class="fas fa-map-marker-alt"></i> <%= user.city %></p>
                    </div>
                    
                    <div class="user-details">
                        <div class="detail-item">
                            <span class="detail-label">Gender:</span>
                            <span class="badge gender-<%= user.gender.toLowerCase() %>">
                                <i class="fas fa-<%= user.gender === 'Male' ? 'mars' : user.gender === 'Female' ? 'venus' : 'genderless' %>"></i>
                                <%= user.gender %>
                            </span>
                        </div>
                        
                        <% if (user.hobby && user.hobby.length > 0) { %>
                            <div class="detail-item">
                                <span class="detail-label">Hobbies:</span>
                                <div class="hobbies-container">
                                    <% user.hobby.forEach(hobby => { %>
                                        <span class="hobby-tag">
                                            <i class="fas fa-heart"></i>
                                            <%= hobby %>
                                        </span>
                                    <% }) %>
                                </div>
                            </div>
                        <% } %>
                        
                        <% if (user.about) { %>
                            <div class="detail-item">
                                <span class="detail-label">About:</span>
                                <p class="user-about"><%= user.about %></p>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="user-footer">
                        <div class="join-date">
                            <i class="fas fa-calendar"></i>
                            Joined: <%= new Date().toLocaleDateString() %>
                        </div>
                        <div class="user-status">
                            <span class="status-badge active">
                                <i class="fas fa-circle"></i>
                                Active
                            </span>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="users-stats">
            <div class="stat-item">
                <i class="fas fa-users"></i>
                <span>Total: <strong><%= allAdmin.length %></strong></span>
            </div>
            <div class="stat-item">
                <i class="fas fa-mars"></i>
                <span>Male: <strong><%= allAdmin.filter(u => u.gender === 'Male').length %></strong></span>
            </div>
            <div class="stat-item">
                <i class="fas fa-venus"></i>
                <span>Female: <strong><%= allAdmin.filter(u => u.gender === 'Female').length %></strong></span>
            </div>
            <div class="stat-item">
                <i class="fas fa-chart-line"></i>
                <span>Growth: <strong>+12%</strong></span>
            </div>
        </div>
        
    <% } else { %>
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3>No Users Found</h3>
            <p>Start building your community by adding the first user</p>
            <a href="/add" class="btn-empty">
                <i class="fas fa-user-plus"></i>
                Add First User
            </a>
        </div>
    <% } %>
</div>

<style>
.page-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 3rem 2rem;
    border-radius: 15px;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.hero-content h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
}

.hero-content p {
    opacity: 0.9;
    font-size: 1.1rem;
}

.btn-hero {
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.btn-hero.primary {
    background: rgba(255,255,255,0.2);
    color: white;
    backdrop-filter: blur(10px);
}

.btn-hero:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.filters-bar {
    background: white;
    padding: 1.5rem;
    border-radius: 15px;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 400px;
}

.search-box i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--secondary);
}

.search-box input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid var(--border);
    border-radius: 50px;
    font-size: 1rem;
    transition: all 0.3s;
}

.search-box input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.filter-buttons {
    display: flex;
    gap: 0.5rem;
}

.filter-btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 25px;
    background: var(--light);
    color: var(--secondary);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
}

.filter-btn.active,
.filter-btn:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-1px);
}

.users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.user-card {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
}

.user-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--success));
}

.user-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.user-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.user-avatar-container {
    position: relative;
}

.user-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--light);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.status-indicator {
    position: absolute;
    bottom: 5px;
    right: 5px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 3px solid white;
}

.status-indicator.online {
    background: var(--success);
}

.user-actions {
    display: flex;
    gap: 0.5rem;
}

.action-btn {
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    color: white;
}

.action-btn.edit {
    background: var(--primary);
}

.action-btn.delete {
    background: var(--danger);
}

.action-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.user-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--dark);
}

.user-email,
.user-phone,
.user-location {
    color: var(--secondary);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.user-details {
    margin: 1.5rem 0;
}

.detail-item {
    margin-bottom: 1rem;
}

.detail-label {
    font-weight: 600;
    color: var(--dark);
    display: block;
    margin-bottom: 0.5rem;
}

.badge {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.875rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.gender-male {
    background: rgba(59, 130, 246, 0.1);
    color: var(--primary);
}

.gender-female {
    background: rgba(239, 68, 68, 0.1);
    color: var(--danger);
}

.gender-other {
    background: rgba(245, 158, 11, 0.1);
    color: var(--warning);
}

.hobbies-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.hobby-tag {
    padding: 0.25rem 0.75rem;
    background: var(--light);
    border-radius: 15px;
    font-size: 0.75rem;
    color: var(--secondary);
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.user-about {
    color: var(--secondary);
    line-height: 1.6;
    font-style: italic;
}

.user-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    margin-top: 1.5rem;
}

.join-date {
    color: var(--secondary);
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-badge {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.75rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-badge.active {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success);
}

.users-stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--secondary);
    font-weight: 500;
}

.stat-item i {
    color: var(--primary);
}

.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.empty-icon {
    font-size: 4rem;
    color: var(--secondary);
    opacity: 0.5;
    margin-bottom: 2rem;
}

.empty-state h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--dark);
}

.empty-state p {
    color: var(--secondary);
    font-size: 1.1rem;
    margin-bottom: 2rem;
}

.btn-empty {
    padding: 1rem 2rem;
    background: var(--primary);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s;
}

.btn-empty:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
}

@media (max-width: 768px) {
    .page-hero {
        flex-direction: column;
        text-align: center;
        gap: 2rem;
    }
    
    .filters-bar {
        flex-direction: column;
        gap: 1rem;
    }
    
    .users-grid {
        grid-template-columns: 1fr;
    }
    
    .users-stats {
        flex-wrap: wrap;
        gap: 1rem;
    }
}
</style>

<script>
function deleteUser(userId, userName) {
    if (confirm(`Are you sure you want to delete ${userName}?`)) {
        window.location.href = `/delete/${userId}`;
    }
}

// Search functionality
document.getElementById('searchInput').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const userCards = document.querySelectorAll('.user-card');
    
    userCards.forEach(card => {
        const name = card.querySelector('.user-name').textContent.toLowerCase();
        const email = card.querySelector('.user-email').textContent.toLowerCase();
        
        if (name.includes(searchTerm) || email.includes(searchTerm)) {
            card.style.display = 'block';
        } else {
            card.style.display = 'none';
        }
    });
});

// Filter functionality
document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const filter = this.dataset.filter;
        const userCards = document.querySelectorAll('.user-card');
        
        userCards.forEach(card => {
            if (filter === 'all') {
                card.style.display = 'block';
            } else {
                const gender = card.dataset.gender;
                if (filter === gender || filter === 'active') {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            }
        });
    });
});
</script>

<%- include('footer') %>