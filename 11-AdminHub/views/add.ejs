<%- include('header') %>

<div class="form-hero">
    <div class="hero-content">
        <h1><i class="fas fa-user-plus"></i> Create New User</h1>
        <p>Add a new member to Jenish Pardava's community</p>
    </div>
    <div class="hero-decoration">
        <div class="decoration-circle"></div>
        <div class="decoration-circle"></div>
        <div class="decoration-circle"></div>
    </div>
</div>

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-user-edit"></i>
            </div>
            <h2>User Information</h2>
            <p>Fill in the details to create a new user account</p>
        </div>
        
        <form method="post" action="/add" enctype="multipart/form-data" class="modern-form">
            <div class="form-section">
                <h3><i class="fas fa-id-card"></i> Personal Details</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user"></i>
                            First Name
                        </label>
                        <input type="text" name="fname" class="form-input" placeholder="Enter first name" required>
                        <div class="input-border"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user"></i>
                            Last Name
                        </label>
                        <input type="text" name="lname" class="form-input" placeholder="Enter last name" required>
                        <div class="input-border"></div>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-envelope"></i> Contact Information</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <input type="email" name="email" class="form-input" placeholder="Enter email address" required>
                        <div class="input-border"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-phone"></i>
                            Phone Number
                        </label>
                        <input type="tel" name="phone" class="form-input" placeholder="Enter phone number" required>
                        <div class="input-border"></div>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-lock"></i> Security</h3>
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <div class="password-input">
                        <input type="password" name="password" class="form-input" placeholder="Enter secure password" required id="passwordInput">
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye" id="passwordIcon"></i>
                        </button>
                    </div>
                    <div class="input-border"></div>
                    <div class="password-strength">
                        <div class="strength-bar">
                            <div class="strength-fill" id="strengthFill"></div>
                        </div>
                        <span class="strength-text" id="strengthText">Enter password</span>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-info-circle"></i> Additional Details</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-venus-mars"></i>
                            Gender
                        </label>
                        <div class="radio-group">
                            <label class="radio-option">
                                <input type="radio" name="gender" value="Male" required>
                                <span class="radio-custom"></span>
                                <i class="fas fa-mars"></i>
                                Male
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="gender" value="Female" required>
                                <span class="radio-custom"></span>
                                <i class="fas fa-venus"></i>
                                Female
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="gender" value="Other" required>
                                <span class="radio-custom"></span>
                                <i class="fas fa-genderless"></i>
                                Other
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-map-marker-alt"></i>
                            City
                        </label>
                        <input type="text" name="city" class="form-input" placeholder="Enter city" required>
                        <div class="input-border"></div>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-heart"></i> Interests</h3>
                <div class="form-group">
                    <label class="form-label">Hobbies & Interests</label>
                    <div class="checkbox-group">
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Reading">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-book"></i>
                            Reading
                        </label>
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Gaming">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-gamepad"></i>
                            Gaming
                        </label>
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Sports">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-futbol"></i>
                            Sports
                        </label>
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Music">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-music"></i>
                            Music
                        </label>
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Travel">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-plane"></i>
                            Travel
                        </label>
                        <label class="checkbox-option">
                            <input type="checkbox" name="hobby" value="Photography">
                            <span class="checkbox-custom">
                                <i class="fas fa-check"></i>
                            </span>
                            <i class="fas fa-camera"></i>
                            Photography
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-image"></i> Profile Picture</h3>
                <div class="form-group">
                    <div class="file-upload">
                        <div class="file-upload-area" id="fileUploadArea">
                            <div class="upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="upload-text">
                                <h4>Choose Profile Picture</h4>
                                <p>Drag & drop or click to select</p>
                            </div>
                            <input type="file" name="profile" class="file-input" accept="image/*" required id="fileInput">
                        </div>
                        <div class="file-preview" id="filePreview" style="display: none;">
                            <img id="previewImage" alt="Preview">
                            <button type="button" class="remove-file" onclick="removeFile()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3><i class="fas fa-comment"></i> About</h3>
                <div class="form-group">
                    <label class="form-label">Tell us about yourself</label>
                    <textarea name="about" class="form-textarea" rows="4" placeholder="Write a brief description about yourself..."></textarea>
                    <div class="input-border"></div>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i>
                    <span>Create User</span>
                    <div class="btn-ripple"></div>
                </button>
                <a href="/list" class="btn-secondary">
                    <i class="fas fa-users"></i>
                    View All Users
                </a>
            </div>
        </form>
    </div>
</div>

<style>
