    background: var(--primary);
    transition: width 0.3s;
}

.form-input:focus + .input-border,
.form-textarea:focus + .input-border {
    width: 100%;
}

.password-input {
    position: relative;
}

.password-toggle {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
