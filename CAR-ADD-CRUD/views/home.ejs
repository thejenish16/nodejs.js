<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JENISH MOTORS | Luxury Automotive Collection</title>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="./dist/style.css">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <a href="#" class="logo">JENISH MOTORS</a>
        <ul class="nav-links" id="navLinks">
            <li><a href="#">Home</a></li>
            <li><a href="#inventory">Inventory</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#footer">Contact</a></li>
            <li><a href="/form" class="btn-primary nav-add-btn">
                <i class="fas fa-plus"></i> ADD
            </a></li>
        </ul>
        <div class="mobile-toggle" id="mobileToggle">
            <i class="fas fa-bars"></i>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content animate-fade-in">
            <h1>Experience <span>Automotive Excellence</span> At Its Finest</h1>
            <p>Discover a curated collection of the world's most sophisticated vehicles, meticulously selected for those
                who appreciate unparalleled craftsmanship and performance.</p>
            <div class="hero-btns">
                <a href="#inventory" class="btn-primary">
                    <i class="fas fa-car"></i> Explore Collection
                </a>
                <a href="/form" class="btn-secondary">
                    <i class="fas fa-plus"></i> List Your Vehicle
                </a>
            </div>
        </div>
    </section>

    <!-- Inventory Section -->
    <section class="inventory-section" id="inventory">
        <div class="container">
            <div class="section-header animate-slide-up">
                <div class="section-subtitle">Premium Selection</div>
                <h2 class="section-title">Our Luxury Collection</h2>
                <p class="section-desc">Each vehicle in our collection undergoes rigorous inspection and certification
                    to ensure it meets our exacting standards of quality and performance.</p>
            </div>

            <div class="cars-grid">
                <% if (cars && cars.length> 0) { %>
                    <% cars.forEach(car=> { %>
                        <div class="car-card animate-slide-up">
                            <% if (car.status==='Reserved' ) { %>
                                <div class="car-badge">Reserved</div>
                                <% } else if (car.price> 10000000) { %>
                                    <div class="car-badge">Premium</div>
                                    <% } %>

                                        <div class="car-img-container">
                                            <img src="<%= car.image || 'https://images.unsplash.com/photo-1549399542-7e3f8b79c341?auto=format&fit=crop&w=800&q=80' %>"
                                                alt="<%= car.name %>" class="car-img">
                                        </div>

                                        <div class="car-content">
                                            <div class="car-meta">
                                                <div class="car-brand">
                                                    <%= car.brand || 'Premium' %>
                                                </div>
                                                <div class="car-year"><i class="far fa-calendar-alt"></i>
                                                    <%= car.year %>
                                                </div>
                                            </div>

                                            <h3 class="car-title">
                                                <%= car.name %>
                                            </h3>

                                            <div class="car-specs">
                                                <div class="car-spec">
                                                    <i class="fas fa-gas-pump"></i>
                                                    <span>
                                                        <%= car.fuel || 'Petrol' %>
                                                    </span>
                                                </div>
                                                <div class="car-spec">
                                                    <i class="fas fa-cogs"></i>
                                                    <span>
                                                        <%= car.transmission || 'Automatic' %>
                                                    </span>
                                                </div>
                                                <div class="car-spec">
                                                    <i class="fas fa-tachometer-alt"></i>
                                                    <span>
                                                        <%= car.engine || '4.4L V8' %>
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="car-footer">
                                                <div class="car-price">â‚¹<%= (car.price / 100000).toFixed(1) %>L</div>
                                                <div class="car-actions">
                                                    <a href="/edit/<%= car._id %>" class="action-btn" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form action="/delete/<%= car._id %>" method="POST"
                                                        style="display: inline;"
                                                        onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                                        <button type="submit" class="action-btn delete" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                    <button class="action-btn" title="View Details">
                                                        <i class="fas fa-arrow-right"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="no-cars" style="grid-column: 1/-1; text-align: center; padding: 80px 20px;">
                                    <i class="fas fa-car fa-4x" style="color: #ddd; margin-bottom: 20px;"></i>
                                    <h3 style="font-size: 1.8rem; margin-bottom: 15px; color: #666;">No Vehicles
                                        Available</h3>
                                    <p style="color: #888; max-width: 500px; margin: 0 auto 30px;">Our luxury collection
                                        is currently being updated. Please check back soon or add a new vehicle to the
                                        inventory.</p>
                                    <a href="/form" class="btn-primary" style="display: inline-flex;">
                                        <i class="fas fa-plus"></i> Add First Vehicle
                                    </a>
                                </div>
                                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer" id="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-col">
                    <h3>JENISH MOTORS</h3>
                    <p style="color: #aaa; margin-bottom: 20px;">Redefining luxury automotive experiences with
                        unparalleled selection and service.</p>
                    <div style="color: #aaa; font-size: 14px;">
                        <p><i class="fas fa-map-marker-alt" style="margin-right: 10px; color: var(--secondary);"></i>
                            123 Luxury Avenue, Mumbai</p>
                        <p><i class="fas fa-phone" style="margin-right: 10px; color: var(--secondary);"></i> +91 98765
                            43210</p>
                        <p><i class="fas fa-envelope" style="margin-right: 10px; color: var(--secondary);"></i>
                            contact@jenishmotors.com</p>
                    </div>
                </div>

                <div class="footer-col">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#inventory">Inventory</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Financing</a></li>
                        <li><a href="#">About Us</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h3>Brands</h3>
                    <ul>
                        <li><a href="#">BMW</a></li>
                        <li><a href="#">Mercedes-Benz</a></li>
                        <li><a href="#">Audi</a></li>
                        <li><a href="#">Porsche</a></li>
                        <li><a href="#">Range Rover</a></li>
                    </ul>
                </div>

                <div class="footer-col">
                    <h3>Newsletter</h3>
                    <p style="color: #aaa; margin-bottom: 20px;">Subscribe to receive updates on new arrivals and
                        exclusive offers.</p>
                    <div style="display: flex;">
                        <input type="email" placeholder="Your Email"
                            style="flex: 1; padding: 12px 15px; border: none; border-radius: 4px 0 0 4px; font-family: 'Inter', sans-serif;">
                        <button
                            style="background-color: var(--secondary); color: white; border: none; padding: 0 20px; border-radius: 0 4px 4px 0; cursor: pointer;"><i
                                class="fas fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="copyright">
                    &copy; 2023 JENISH MOTORS. All rights reserved.
                </div>
                <div class="social-links">
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function () {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Mobile menu toggle
        const mobileToggle = document.getElementById('mobileToggle');
        const navLinks = document.getElementById('navLinks');

        if (mobileToggle) {
            mobileToggle.addEventListener('click', function () {
                navLinks.classList.toggle('active');
            });
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function (event) {
            if (!mobileToggle.contains(event.target) && !navLinks.contains(event.target)) {
                navLinks.classList.remove('active');
            }
        });
    </script>
</body>

</html>