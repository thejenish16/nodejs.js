<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .hero-section { padding: 60px 0; text-align: center; color: white; }
        .hero-title { font-size: 3.5rem; font-weight: bold; margin-bottom: 20px; text-shadow: 2px 2px 4px rgba(0,0,0,0.3); }
        .hero-subtitle { font-size: 1.3rem; margin-bottom: 40px; opacity: 0.9; }
        .form-container { background: white; border-radius: 20px; box-shadow: 0 15px 35px rgba(0,0,0,0.2); padding: 40px; margin: 40px auto; max-width: 800px; }
        .form-title { color: #333; font-weight: bold; margin-bottom: 30px; text-align: center; font-size: 2rem; }
        .form-label { font-weight: 600; color: #555; margin-bottom: 8px; }
        .form-control, .form-select { border-radius: 10px; border: 2px solid #e1e5e9; padding: 12px 15px; transition: all 0.3s; }
        .form-control:focus, .form-select:focus { border-color: #667eea; box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25); transform: translateY(-2px); }
        .btn-primary { background: linear-gradient(45deg, #667eea, #764ba2); border: none; border-radius: 10px; padding: 15px 40px; font-weight: 600; font-size: 1.1rem; transition: all 0.3s; }
        .btn-primary:hover { transform: translateY(-3px); box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4); }
        .btn-secondary { background: linear-gradient(45deg, #6c757d, #495057); border: none; border-radius: 10px; padding: 15px 40px; font-weight: 600; }
        .form-check-input:checked { background-color: #667eea; border-color: #667eea; }
        .hobby-group, .gender-group { display: flex; gap: 20px; flex-wrap: wrap; justify-content: center; }
        .form-check { margin: 0; }
        .form-check-label { margin-left: 8px; font-weight: 500; }
        .input-group { position: relative; }
        .input-icon { position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: #667eea; z-index: 10; }
        .form-control.with-icon { padding-left: 45px; }
        .stats-section { background: rgba(255,255,255,0.1); border-radius: 15px; padding: 30px; margin: 30px 0; backdrop-filter: blur(10px); }
        .stat-card { text-align: center; color: white; }
        .stat-number { font-size: 2.5rem; font-weight: bold; }
        .stat-label { font-size: 1.1rem; opacity: 0.9; }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title"><i class="fas fa-building"></i> Employee Management System</h1>
            <p class="hero-subtitle">Manage your workforce efficiently with our modern platform</p>
            
            <div class="row stats-section">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-number"><i class="fas fa-users"></i></div>
                        <div class="stat-label">Easy Management</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-number"><i class="fas fa-chart-line"></i></div>
                        <div class="stat-label">Track Performance</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="stat-number"><i class="fas fa-shield-alt"></i></div>
                        <div class="stat-label">Secure Data</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Form Section -->
    <div class="container">
        <div class="form-container">
            <h2 class="form-title"><i class="fas fa-user-plus"></i> Add New Employee</h2>
            
            <form method="post" action="/employee/addEmp">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label"><i class="fas fa-user"></i> Employee Name</label>
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            <input type="text" name="emp_name" class="form-control with-icon" placeholder="Enter full name" required>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <label class="form-label"><i class="fas fa-envelope"></i> Email Address</label>
                        <div class="input-group">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" name="emp_email" class="form-control with-icon" placeholder="Enter email address" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label class="form-label"><i class="fas fa-lock"></i> Password</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" name="emp_password" class="form-control with-icon" placeholder="Enter password" required>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <label class="form-label"><i class="fas fa-rupee-sign"></i> Monthly Salary</label>
                        <div class="input-group">
                            <i class="fas fa-rupee-sign input-icon"></i>
                            <input type="number" name="emp_salary" class="form-control with-icon" placeholder="Enter salary amount" required>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label"><i class="fas fa-venus-mars"></i> Gender</label>
                    <div class="gender-group mt-3">
                        <div class="form-check">
                            <input type="radio" name="emp_gender" value="Male" class="form-check-input" id="male" required>
                            <label class="form-check-label" for="male">
                                <i class="fas fa-mars"></i> Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" name="emp_gender" value="Female" class="form-check-input" id="female" required>
                            <label class="form-check-label" for="female">
                                <i class="fas fa-venus"></i> Female
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label"><i class="fas fa-heart"></i> Hobbies & Interests</label>
                    <div class="hobby-group mt-3">
                        <% ["Reading", "Music", "Cricket", "Uno (Game)", "Other"].forEach((hobby, index) => { %>
                            <div class="form-check">
                                <input type="checkbox" name="emp_hobby" value="<%= hobby %>" class="form-check-input" id="hobby<%= index %>">
                                <label class="form-check-label" for="hobby<%= index %>">
                                    <i class="fas fa-<%= hobby === 'Reading' ? 'book' : hobby === 'Music' ? 'music' : hobby === 'Cricket' ? 'baseball-ball' : hobby === 'Uno (Game)' ? 'gamepad' : 'plus' %>"></i>
                                    <%= hobby %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <div class="mb-5">
                    <label class="form-label"><i class="fas fa-briefcase"></i> Job Role</label>
                    <select class="form-select" name="emp_role" required>
                        <option value="">Select Job Role</option>
                        <% ["Owner", "Manager", "HR", "Employee"].forEach(role => { %>
                            <option value="<%= role %>">
                                <i class="fas fa-<%= role === 'Owner' ? 'crown' : role === 'Manager' ? 'user-tie' : role === 'HR' ? 'users-cog' : 'user' %>"></i>
                                <%= role %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="d-flex gap-3 justify-content-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Add Employee
                    </button>
                    <a href="/employee/allEmployeePage" class="btn btn-secondary">
                        <i class="fas fa-list"></i> View All Employees
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center py-4">
        <p class="text-white mb-0"><i class="fas fa-heart text-danger"></i> Made with love for efficient employee management</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form animation
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-control, .form-select');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                });
                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';
                });
            });
        });
    </script>
</body>
</html>